            {
              "type": "string",
              "pattern": "^(?=.{3,24}$)[^0-9][A-Za-z0-9]+(?:-[A-Za-z0-9]+)*$"
            },
            {
              "$ref": "https://schema.management.azure.com/schemas/common/definitions.json#/definitions/expression"
            }
          ],
          "description": "Scanning account name"
        },
        "properties": {
          "oneOf": [
            {
              "$ref": "#/definitions/ScanProfileProperties"
